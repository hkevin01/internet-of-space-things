# Environment Configuration for Internet of Space Things

# Database Configuration
DATABASE_URL=postgresql://postgres:password123@localhost:5432/iot_space
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=your-influxdb-token-here
INFLUXDB_ORG=iot-space
INFLUXDB_BUCKET=telemetry

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Application Configuration
DEBUG=True
LOG_LEVEL=INFO
SECRET_KEY=your-secret-key-here
JWT_SECRET=your-jwt-secret-here

# Mission Control Configuration
MISSION_NAME=IoST-Mission
NETWORK_NAME=IoST-Network
CONSTELLATION_NAME=IoST-Constellation

# Communication Configuration
DEFAULT_FREQUENCY=2.4e9
MAX_RETRIES=5
ACK_TIMEOUT=300
PACKET_TIMEOUT=86400

# Security Configuration
ENCRYPTION_KEY=your-encryption-key-here
QUANTUM_KEY_SIZE=2048

# External Services
GROUND_STATION_URL=https://api.groundstation.space
WEATHER_API_KEY=your-weather-api-key
EPHEMERIS_API_URL=https://api.ephemeris.space

# Development Settings
ENABLE_SIMULATION=True
SIMULATION_SPEED=1.0
MOCK_HARDWARE=True
